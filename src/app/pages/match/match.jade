div.header(ng-class="{'slide-out': $navigation.leaving}")
    ul
        li {{ $match.current().score }} / {{ $match.current().totalTry }}
        li
            loader(loading="result === null")
        li
            a(href='', ng-click='openModal()') Surrend

div.leave(ng-if='modal')
    div.leave-modal
        | Are you sure ?
        a(href='' ng-click='giveUp()') Yes
        | &nbsp;/&nbsp;
        a(href='' ng-click='closeModal()') No

div.game(ng-class="{'slide-out': $navigation.leaving}")
    div(ng-if='question')
        div.game-area.firstImage
            span(ng-click="chooseImage('firstImage')")
                img(ng-if="question.firstImage" ng-src="{{ question.firstImage }}")
        div.game-area.secondImage
            span(ng-click="chooseImage('secondImage')")
                img(ng-if="question.secondImage" ng-src="{{ question.secondImage }}")
        div.who-am-i
            span(ng-if="result === null") Who is "{{ question.name | normalize }}" ?
            span(ng-if="result !== null" ng-style="{color: result ? 'green': 'red'}") {{ result ? "CORRECT !" : "WRONG !" }}

audio(ng-if="env == 'production'", autoplay=true, loop=true src="http://grayscale.scene.pl/msx/404error.mp3")
