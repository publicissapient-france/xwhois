div(ng-class="{'slide-out': $navigation.leaving}").splash-screen
    div#logo
    div.slogan Le jeu des petits bonshommes violets
    div(ng-show="connected")
        div.informations
            div.avatar
                img(src="https://fr.gravatar.com/userimage/80232426/a5e97654a15843fa94bc523e14f0525e.jpeg")
            div.exp(xp, next-level=30, value=12)
            div.scores
                div.me
                    div(style="float: left;") Level 1
                    div(style="float: right;") M. Boule Qui-est-ce
                    div(style="clear: both")
                table
                    tr(ng-repeat="match in $match.results")
                        td {{ $first ? 'Last score' : 'Best score' }}
                        td {{ match.score }}/{{ match.totalTry }}
                        td {{ match.comment }}
        div#play
            a(href='' ng-click="$navigation.to('match', 600)") PLAY
    div#signin(ng-hide="connected")
        oauth(site="http://oauth-ng-server.herokuapp.com"
            client-id="d6d2b510d18471d2e22aa202216e86c42beac80f9a6ac2da505dcb79c7b2fd99"
            redirect-uri="/play"
            profile-uri="http://oauth-ng-server.herokuapp.com/api/v1/me"
            scope="public"
            template="/assets/oauth-template.html")
        //div
        //    a(href="" ng-click="signin()") SIGN IN

footer.footer(ng-class="{'slide-out': $navigation.leaving}")
    ul
        li
            | &copy; 2015 -&nbsp;
            a(href='', ng-click="$navigation.to('credits', 600)") Credits
            | &nbsp;-&nbsp;
            a(href='http://xebia.fr') Xebia

audio(ng-if="env == 'production'" autoplay=true, loop=true src="http://grayscale.scene.pl/msx/synthy_g.mp3")
